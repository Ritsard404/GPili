<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPili.Presentation.Features.Cashiering.CashieringPage"
             xmlns:footer="clr-namespace:GPili.Presentation.Contents"
             xmlns:products="clr-namespace:GPili.Presentation.Contents.Cashiering"
             Title="Cashiering">
    <Grid RowDefinitions="*, Auto">
        <Grid RowDefinitions="*" ColumnDefinitions="0.65*,0.35*" VerticalOptions="Fill" HorizontalOptions="Fill">
            <Border Grid.Column="0" BackgroundColor="Red" 
                HorizontalOptions="Fill" VerticalOptions="Fill">
                <products:ProductSelectionView />
            </Border>

            <Border Grid.Column="1" BackgroundColor="Blue" 
                HorizontalOptions="Fill" VerticalOptions="Fill" >
                <products:OrderSummaryView />
            </Border>
        </Grid>



        <Grid Grid.Row="1">
            <footer:UserFooterView />
        </Grid>
    </Grid>
</ContentPage>