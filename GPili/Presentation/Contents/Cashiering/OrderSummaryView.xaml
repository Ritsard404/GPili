<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converter="clr-namespace:GPili.Converters"
             x:Class="GPili.Presentation.Contents.Cashiering.OrderSummaryView">
    <ContentView.Resources>
        <converter:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converter:ItemIndexConverter x:Key="ItemIndexConverter"/>
    </ContentView.Resources>
    <Grid RowDefinitions="0.5*, 0.5*" Padding="10" RowSpacing="10">
        <Grid Grid.Row="0" RowDefinitions="Auto,*,Auto">
            <Grid ColumnDefinitions="0.10*,0.10*,0.65*,0.15*"
                Padding="12"
                Grid.Row="0"
                BackgroundColor="SkyBlue">

                <Label Text="No."
                   Grid.Column="0"
                   FontAttributes="Bold" />
                <Label Text="Qty"
                   Grid.Column="1"
                   FontAttributes="Bold" />
                <Label Text="Description"
                   Grid.Column="2"
                   FontAttributes="Bold" />
                <Label Text="Amount"
                   Grid.Column="3"
                   FontAttributes="Bold" />
            </Grid>

            <!-- SCROLLABLE ITEMS -->
            <CollectionView x:Name="OrderItemsCollectionView"
                            Grid.Row="1"
                            ItemsSource="{Binding Items}"
                            SelectionMode="Single"
                            BackgroundColor="Violet"
                            VerticalOptions="Fill"
                            ItemSizingStrategy="MeasureAllItems">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="0.10*,0.10*,0.65*,0.15*"
                              Padding="12"
                              Margin="4">
                            <Label Grid.Column="0"
                               Text="{Binding ., Converter={StaticResource ItemIndexConverter}, ConverterParameter={x:Reference OrderItemsCollectionView}}"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                            <Label Text="{Binding QtyDisplay}" Grid.Column="1" VerticalOptions="Center" />
                            <Label Text="{Binding DisplayNameWithPrice}" Grid.Column="2" />
                            <Label Text="{Binding SubTotal, StringFormat='₱{0:N2}'}" Grid.Column="3" />

                            <Grid.GestureRecognizers>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
            </CollectionView>


            <!-- Footer (not scrollable) -->
            <Grid Grid.Row="2" IsVisible="{Binding CurrentItem.IsInitialDisplay}" ColumnDefinitions="0.10*,0.10*,0.65*,0.15*" Padding="12" BackgroundColor="Gold">
                <Label Grid.Column="0" Text="*" TextColor="Black"  FontAttributes="Bold" VerticalOptions="Center"/>
                <Label Grid.Column="1" Text="{Binding CurrentItem.InitialQty}" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center"/>
                <Label Grid.Column="2" Text="{Binding CurrentItemDisplay}" FontAttributes="Bold" VerticalOptions="Center"/>
                <Label Grid.Column="3" Text="{Binding CurrentItemAmount, StringFormat='₱{0:N2}'}" FontAttributes="Bold" VerticalOptions="Center"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" RowDefinitions="Auto, *" ColumnDefinitions="0.5*, 0.5*" HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="Black">
            <Label Grid.Row="0" 
                   Text="SALES"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="18"/>
            <VerticalStackLayout Grid.Column="0" 
                                 Grid.Row="1"
                                 Margin="5" 
                                 Padding="5" 
                                 VerticalOptions="Start" 
                                 Spacing="12" 
                                 HorizontalOptions="Center">
                <HorizontalStackLayout   Spacing="10">
                    <Label Text="SUBTOTAL: " 
                       FontSize="14"
                       FontAttributes="Bold"
                       VerticalOptions="Center"></Label>
                    <Entry WidthRequest="100" 
                       IsReadOnly="True" 
                       Text="{Binding Tenders.SubTotal, StringFormat='₱ {0:N2}'}" 
                       FontAttributes="Bold"
                       BackgroundColor="White"
                       TextColor="Black"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="End"
                       />
                </HorizontalStackLayout>
                <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                    <Label Text="TOTAL: " 
                       FontSize="14"
                       FontAttributes="Bold"
                       VerticalOptions="Center"></Label>
                    <Entry WidthRequest="100" 
                       IsReadOnly="True" 
                       Text="{Binding Tenders.TotalAmount, StringFormat='₱ {0:N2}'}" 
                       FontAttributes="Bold"
                       BackgroundColor="White"
                       TextColor="Black"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="End"
                       />
                </HorizontalStackLayout>
                <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                    <Label Text="CASH: " 
                       FontSize="14"
                       FontAttributes="Bold"
                       VerticalOptions="Center"></Label>
                    <Entry WidthRequest="100" 
                       IsReadOnly="True" 
                       Text="{Binding Tenders.CashTenderAmount, StringFormat='₱ {0:N2}'}" 
                       FontAttributes="Bold"
                       BackgroundColor="White"
                       TextColor="Black"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="End"
                       />
                </HorizontalStackLayout>
                <CollectionView ItemsSource="{Binding Tenders.OtherPayments}"
                    Margin="0,10,0,0"
                    SelectionMode="None"
                    IsVisible="{Binding Tenders.HasOtherPayments}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                                <Label Text="{Binding Reference}" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                                <Entry WidthRequest="100" 
                                       IsReadOnly="True" 
                                       Text="{Binding Amount, StringFormat='₱ {0:N2}'}" 
                                       FontAttributes="Bold"
                                       BackgroundColor="White"
                                       TextColor="Black"
                                       VerticalOptions="Center"
                                       HorizontalTextAlignment="End"/>
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Show fallback if no other payments -->
                <HorizontalStackLayout Spacing="10" 
                                       HorizontalOptions="End"
                                       IsVisible="{Binding Tenders.HasOtherPayments, Converter={StaticResource InverseBoolConverter}}">
                    <Label Text="OTHERS:" 
                       FontSize="14"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                    <Entry WidthRequest="100" 
                       IsReadOnly="True" 
                       Text="₱ 0.00"
                       FontAttributes="Bold"
                       BackgroundColor="White"
                       TextColor="Black"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="End"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                    <Label Text="BALANCE: " 
                       FontSize="14"
                       FontAttributes="Bold"
                       VerticalOptions="Center"></Label>
                    <Entry WidthRequest="100" 
                       IsReadOnly="True" 
                       Text="{Binding Tenders.ChangeAmount, StringFormat='₱ {0:N2}'}" 
                       FontAttributes="Bold"
                       BackgroundColor="White"
                       TextColor="Black"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="End"
                       />
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1"
                                 Grid.Row="1"
                                 Margin="5" 
                                 Padding="5" 
                                 VerticalOptions="Start" 
                                 Spacing="12" 
                                 HorizontalOptions="Center"
                                 IsVisible="False">
                <CollectionView ItemsSource="{Binding Tenders.OtherPayments}"
                    Margin="0,10,0,0"
                    SelectionMode="None"
                    IsVisible="{Binding Tenders.HasOtherPayments}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                                <Label Text="{Binding Reference}" 
                       FontSize="14"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                                <Entry WidthRequest="100" 
                       IsReadOnly="True" 
                       Text="{Binding Amount, StringFormat='₱ {0:N2}'}" 
                       FontAttributes="Bold"
                       BackgroundColor="White"
                       TextColor="Black"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="End"/>
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Show fallback if no other payments -->
                <HorizontalStackLayout Spacing="10" 
                                       IsVisible="{Binding Tenders.HasOtherPayments, Converter={StaticResource InverseBoolConverter}}">
                    <Label Text="OTHERS:" 
                       FontSize="14"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                    <Entry WidthRequest="100" 
                       IsReadOnly="True" 
                       Text="₱ 0.00"
                       FontAttributes="Bold"
                       BackgroundColor="White"
                       TextColor="Black"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="End"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

        </Grid>
    </Grid>

</ContentView>
