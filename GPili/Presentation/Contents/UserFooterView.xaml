<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPili.Presentation.Contents.UserFooterView">
    <HorizontalStackLayout Spacing="30" HeightRequest="20" Padding="10, 0" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

        <Label HorizontalOptions="StartAndExpand" VerticalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Powered by " />
                    <Span Text="Arsene Software Solutions" TextColor="#00BCD4" FontAttributes="Bold" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Label Text="|" VerticalOptions="Center" />

        <Label x:Name="NetworkStatus" FontAttributes="Bold" VerticalOptions="Center"/>
        <Label Text="|" VerticalOptions="Center" />

        <Label x:Name="User" FontAttributes="Bold" VerticalOptions="Center"/>
        <Label Text="|" VerticalOptions="Center" />

        <Label x:Name="PosName" VerticalOptions="Center"/>
        <Label Text="|" VerticalOptions="Center" />

        <Label x:Name="Date" VerticalOptions="Center"/>
    </HorizontalStackLayout>
</ContentView>
