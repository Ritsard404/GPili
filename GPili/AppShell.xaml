<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GPili.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:logIn="clr-namespace:GPili.Presentation.Features.LogIn"
    xmlns:cashiering="clr-namespace:GPili.Presentation.Features.Cashiering"
    xmlns:manager="clr-namespace:GPili.Presentation.Features.Manager"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False"
    Title="GPili">
    
    <ShellContent
        ContentTemplate="{DataTemplate logIn:LogInPage}"
        Route="loginPage" />

    <ShellContent
        ContentTemplate="{DataTemplate cashiering:CashieringPage}"
        Route="cashieringPage" />

    <ShellContent
        ContentTemplate="{DataTemplate manager:ManagerPage}"
        Route="managerPage" />

</Shell>
